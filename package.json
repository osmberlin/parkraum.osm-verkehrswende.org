{
  "scripts": {
    "dev": "npm-run-all --parallel dev:css dev:jekyll serve",
    "dev:css": "tailwindcss -i css-src/tailwind.css -o css/tailwind.css --watch",
    "//2dev:css": "echo 'https://github.com/tailwindlabs/tailwindcss/discussions/8470' # tailwindcss -i css-src/tailwind.css -o css/tailwind.css --watch",
    "//dev:css": "onchange '**' --exclude-path .gitignore -- tailwindcss -i css-src/tailwind.css -o css/tailwind.css",
    "dev:jekyll": "bundle exec jekyll serve --open-url",
    "//2dev:jekyll": "echo 'https://github.com/tailwindlabs/tailwindcss/discussions/8470' # bundle exec jekyll serve --livereload --open-url",
    "//dev:jekyll": "onchange '**' --exclude-path .gitignore -- bundle exec jekyll build",
    "serve": "serve './_site'",
    "build": "npm run build:css && npm run build:jekyll",
    "build:css": "tailwindcss -i css-src/tailwind.css -o css/tailwind.css",
    "build:jekyll": "bundle exec jekyll build"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "jekyll": "*",
    "serve": "^13.0.2",
    "tailwindcss": "^3.1.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10"
  }
}
